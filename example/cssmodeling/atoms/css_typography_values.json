		{
			"name":"text-color-values",
			"base":"text-color",
			"scheme":"color-values",
			"values":[
				"_@_grey-5",
				"_@_grey-6","_@_grey-7","_@_grey-8",
				"_@_grey-4","_@_grey-3","_@_grey-0"
			],
			"atoms":[
				{
					"name":"text-color",
					"group":"typography",
					"example":"...Font Colors",
					"selector":".a-@var_name",
